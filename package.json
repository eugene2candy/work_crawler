{
	"name" : "work_crawler",
	"version" : "1.5.20180821",
	"main" : "gui_electron/gui_electron.js",
	"description" : "CeJS online novels / comics downloader, CeJS 線上小說漫畫下載工具.",
	"author" : {
		"name" : "vimunci",
		"email" : "vimunci@gmail.com",
		"url" : "https://github.com/kanasimi/work_crawler"
	},
	"homepage" : "https://github.com/kanasimi/work_crawler",
	"license" : "BSD-3-Clause",
	"scripts" : {
		"start" : "node_modules/.bin/electron .",
		"pack" : "node_modules/.bin/electron-builder --dir",
		"dist" : "node_modules/.bin/electron-builder",
		"postinstall" : "node_modules/.bin/electron-builder install-app-deps"
	},
	"build" : {
		"productName" : "work_crawler",
		"appId" : "org.kanasimi.work_crawler",
		"directories" : {
			"output" : "build"
		},
		"files" : [ "package.json", "node_modules/*", "_CeL.loader.nodejs.js",
				"gui_electron/**/*", "work_crawler_loder.js",
				"comic.cmn-Hans-CN/**/*", "novel.cmn-Hans-CN/**/*",
				"novel.ja-JP/**/*" ],
		"mac" : {
			"target" : "dmg"
		},
		"dmg" : {
			"contents" : [ {
				"x" : 110,
				"y" : 150
			}, {
				"x" : 240,
				"y" : 150,
				"type" : "link",
				"path" : "/Applications"
			} ]
		},
		"linux" : {
			"target" : [ {
				"target" : "AppImage",
				"arch" : [ "x64", "ia32" ]
			}, {
				"target" : "deb",
				"arch" : [ "x64", "ia32" ]
			} ],
			"category" : "Network",
			"icon" : "gui_electron/icon/"
		},
		"win" : {
			"target" : [ {
				"target" : "nsis",
				"arch" : [ "x64", "ia32" ]
			} ],
			"icon" : "gui_electron/icon/rasen1.ico"
		},
		"nsis" : {
			"oneClick" : false,
			"perMachine" : false,
			"allowElevation" : true,
			"allowToChangeInstallationDirectory" : true,
			"runAfterFinish" : true
		}
	},
	"devDependencies" : {
		"electron" : "latest",
		"electron-builder" : "latest"
	},
	"dependencies" : {
		"cejs" : "latest",
		"gh-updater" : "latest"
	}
}
